        "/api/product/sync": {
            "post": {
                "tags": [
                    "Products"
                ],
                "summary": "Sync a single product from external store (by seller client ID)",
                "operationId": "092f4e682110d75ec5b69561e8c66a66",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "seller_client_id",
                                    "seller_product_id",
                                    "name",
                                    "price",
                                    "stock"
                                ],
                                "properties": {
                                    "seller_client_id": {
                                        "type": "string",
                                        "example": "abc123"
                                    },
                                    "seller_product_id": {
                                        "type": "string",
                                        "example": "SP001"
                                    },
                                    "name": {
                                        "type": "string",
                                        "example": "Tas Ransel Hitam"
                                    },
                                    "description": {
                                        "type": "string",
                                        "example": "Tas untuk kerja & sekolah"
                                    },
                                    "price": {
                                        "type": "number",
                                        "format": "float",
                                        "example": 159000
                                    },
                                    "stock": {
                                        "type": "integer",
                                        "example": 10
                                    },
                                    "sku": {
                                        "type": "string",
                                        "example": "SKU-001"
                                    },
                                    "image_url": {
                                        "type": "string",
                                        "example": "https://example.com/image.jpg"
                                    },
                                    "weight": {
                                        "type": "number",
                                        "format": "float",
                                        "example": 0.8
                                    },
                                    "is_active": {
                                        "type": "boolean",
                                        "example": true
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Product synced successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": true
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Product synced successfully."
                                        },
                                        "product_id": {
                                            "type": "integer",
                                            "example": 12
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Seller not found"
                    },
                    "400": {
                        "description": "Invalid input"
                    }
                }
            }
        },
        "/api/register-seller": {
            "post": {
                "tags": [
                    "Seller Auth"
                ],
                "summary": "Register a new user (customer or seller)",
                "operationId": "e308b2b868b8a672ddeddb016b9d2359",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "name",
                                    "email",
                                    "password",
                                    "role"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "Andi"
                                    },
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "andi@example.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "secret123"
                                    },
                                    "role": {
                                        "type": "string",
                                        "enum": [
                                            "seller",
                                            "customer"
                                        ],
                                        "example": "seller"
                                    },
                                    "shop_name": {
                                        "type": "string",
                                        "example": "Toko Andi"
                                    },
                                    "shop_url": {
                                        "type": "string",
                                        "example": "toko-andi"
                                    },
                                    "shop_description": {
                                        "type": "string",
                                        "example": "Menjual barang elektronik"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "User registered successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Seller registered successfully"
                                        },
                                        "user": {
                                            "properties": {
                                                "id": {
                                                    "type": "integer",
                                                    "example": 1
                                                },
                                                "name": {
                                                    "type": "string",
                                                    "example": "Andi"
                                                },
                                                "email": {
                                                    "type": "string",
                                                    "example": "andi@example.com"
                                                },
                                                "role": {
                                                    "type": "string",
                                                    "example": "seller"
                                                }
                                            },
                                            "type": "object"
                                        },
                                        "seller_info": {
                                            "properties": {
                                                "id": {
                                                    "type": "integer",
                                                    "example": 1
                                                },
                                                "shop_name": {
                                                    "type": "string",
                                                    "example": "Toko Andi"
                                                },
                                                "shop_url": {
                                                    "type": "string",
                                                    "example": "toko-andi"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation error"
                    },
                    "500": {
                        "description": "Registration failed"
                    }
                }
            }
        },
        "/api/login": {
            "post": {
                "tags": [
                    "Seller Auth"
                ],
                "summary": "Login for customer/seller and get access token",
                "operationId": "562f93a4a4d383c95ba1c9b6d7170190",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email",
                                    "password"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "andi@example.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "secret123"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Login successful",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "token_type": {
                                            "type": "string",
                                            "example": "Bearer"
                                        },
                                        "expires_in": {
                                            "type": "integer",
                                            "example": 604800
                                        },
                                        "access_token": {
                                            "type": "string",
                                            "example": "eyJ0eXAiOiJKV1Q..."
                                        },
                                        "refresh_token": {
                                            "type": "string",
                                            "example": ""
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Password wrong / User not found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": false
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Password wrong"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        }
